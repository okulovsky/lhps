<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style TargetType="UserControl" x:Key="EmptyFrameStyle">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type UserControl}">
                    <DockPanel>
                        <Grid DockPanel.Dock="Top" Height="150">
                            <Rectangle  Fill="Brown"/>
                            <Label Foreground="White" FontSize="90" HorizontalAlignment="Right" Content="{Binding Caption}"/>
                        </Grid>
                        <Grid>
                            <Rectangle Fill="Beige"/>
                            <ContentPresenter/>
                        </Grid>
                    </DockPanel>
                </ControlTemplate>
            </Setter.Value> 
        </Setter>
    </Style>
</ResourceDictionary>